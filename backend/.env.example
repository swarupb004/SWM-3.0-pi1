# Server Configuration
PORT=3000
NODE_ENV=development

# Database Type: 'postgresql' or 'mysql' (default: postgresql)
DB_TYPE=postgresql

# Database Configuration (PostgreSQL - default)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bpo_tracker
DB_USER=postgres
DB_PASSWORD=your_password_here

# Database Configuration (MySQL - use these settings if DB_TYPE=mysql)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=bpo_tracker
# DB_USER=root
# DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
